<h1>New Doughnut</h1>

<%= form_with model: @doughnut do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% @doughnut.errors.full_messages_for(:name).each do |message| %>
        <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :price %><br>
    <%= form.text_area :price%>
    <% @doughnut.errors.full_messages_for(:price).each do |message| %>
        <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description%>
    <% @doughnut.errors.full_messages_for(:description).each do |message| %>
        <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>